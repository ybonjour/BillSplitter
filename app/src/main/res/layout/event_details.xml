<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/event_details_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/event_details_pager_tab_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#000"
            android:textColor="#fff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/drawer_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="#000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nav_drawer_username"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="7dp"
            android:textColor="#33B5E5"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentBottom="true"
            android:background="#000" ></View>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">


            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="1dp"
                android:text="GROUPS"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>

            <!--  divider -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_group_button"
                android:src="@android:drawable/ic_input_add"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="1dp"
                android:layout_alignParentBottom="true"
                android:background="#DADADC" ></View>

        </RelativeLayout>

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="#DADADC"
            android:dividerHeight="1dp"
            android:background="#fff"
            />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>